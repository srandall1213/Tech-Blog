<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">Edit</h2>
  <form id ="editPostForm">
    <div class='title mt-5' id="postID" type="text" value={{post.id}}>
    <label for="postid">Post ID:{{post.id}}</label>
  </div>
    <div>
        <label for="post-title">Post Title:</label>
      <input class="input" id="postTitle" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-content">Post Entry:</label>
      <input class="input" id="postText" type="text" value="{{post.content}}" />
    </div>
    <div class="is-pulled-right">
       Created by you on {{format_date post.postDate}}
      |
      <a href="/post/{{post.id}}">{{comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button button-info">Save post</button>
    <button type="button" class="button button-info" id= "deletePostBtn">Delete post</button>
  </form>
</article>

<section class="card border-dark">
    <div class="card-header">Comments</div>
    {{#if this}}
    {{#each this}}
        <div class="comment">
            <p>{{commentText}}</p>
            <p>&mdash; {{user.username}} on {{format_date commentDate}}</p>
        </div>
    {{/each}}
    {{else}}
        <div class="comment">
            <p>There are no comments</p>
        </div>
    {{/if}}
    </div>
</section> 

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>