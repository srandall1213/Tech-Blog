<section class="card border-dark mb-3">
    <div class="card-header">Your Posts</div>
    <div class="postText">
        <ul class="post-list">
            {{#if posts.length}}
                {{#each posts as |post|}}
                <a href="/dashboard/edit/{{id}}">
                    <li class="post-list-item" >
                        <div>{{title}} created on {{format_date postDate}}</div>
                    </li>
                </a>
                {{/each}}
            {{else}}
            <p class="font-italic mt-2">You have no posts at this time.</p>
            {{/if}}
        </ul>
    </div>
</section>


<section class="card border-dark hide" id="createPost">
    <div class="card-header">Create New Post</div>
    <div class="card-body">
        <form class="newPostForm">
            <div>
                <label for="postTitle" class="form-label">Title:</label>
                <input class="form-input w-100 mb-2" id="postTitle" type="text" name="title"/>
            </div>
            <div>
                <label for="postText" class="form-label">Content:</label>
                <textarea class="form-input w-100 mb-3" id="postText" type="text" name="content"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
        </form>
    </div>
</section>

<div class="center mt-3">
    <button type="button" class="btn btn-info mx-auto" style="width: 200px;" id="addPostBtn">+ Create New Post</button> 
</div>

<script src="./js/new.js"></script> 